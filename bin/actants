#!/usr/bin/perl
# PODNAME: actants
# ABSTRACT: command line interface to Lingua::PT::Actants

use warnings;
use strict;
binmode(STDOUT, ":utf8");

use Lingua::PT::Actants;
use Path::Tiny;

my $input;

my $file = shift;
if ($file) {
  $input = path($file)->slurp_utf8;
}
else {
  $input = join('', <STDIN>);
}

unless ($input) {
  print "Usage: actants <input>\n";
  exit;
}

my $o = Lingua::PT::Actants->new( conll => $input );
my ($cores, $ranks) = $o->acts_cores;
my $acts = $o->actants;

print $o->text, "\n\n",
        $o->pp_acts_syntagmas($acts), "\n",
          $o->pp_acts_cores($cores), "\n",
            $o->pp_acts_ranks($ranks);

